{
  "name": "package-security-checker",
  "version": "1.0.0",
  "description": "Goes through a list of npm packages and informs you when a package could contain mailware.",
  "main": "dist/src/index.js",
  "bin": {
    "package-security-checker": "dist/src/index.js"
  },
  "keywords": [
    "npm",
    "package",
    "security",
    "checker"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "start": "node dist/src/index.js",
    "dev": "ts-node src/index.ts",
    "check": "ts-node src/index.ts",
    "test": "jest",
    "test:security": "jest --testNamePattern='security|validation'",
    "lint": "tsc --noEmit",
    "audit": "npm audit --audit-level=moderate"
  },
  "author": "arne.seidenfaden@konvoj.de",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.5.1",
    "jest": "^30.1.3",
    "ts-jest": "^29.4.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
